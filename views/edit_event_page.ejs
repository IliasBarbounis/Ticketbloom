<html lang="en">
<head>
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.8.2/angular.min.js"></script>
    <link rel=”stylesheet” href=”https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css”>
    <link rel="stylesheet" href="css/edit_event_page_styles.css">
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create Event</title>
</head>
<body style="background-color:#122f69;">
    
    
        <div class="container">
          
            <div class="navbar">
              <a href="/" class="logo">Ticketbloom</a>
              
              <nav>
                <ul id="menuList" >
                    <div id="parent">
                       
                        <div id="right">
                        
                         
                            <li><a href="/logout" class="rb">Logout</a></li>
                         
                          
                        </div>   
                    </div>         
                </ul>
                
                
              </nav>
            </div>

            <div class="container">
                <h2 class="form-title">Create Event</h2>
                <form action="/edit_events_form" method="POST">
                  <div class="form-field">
                    <label for="title" class="form-label">Title:</label>
                    <input type="text" id="title" name="title" class="form-input" required>
                  </div>
                  <div class="form-field">
                    <label for="description" class="form-label">Description:</label>
                    <textarea id="description" name="description" rows="6" class="form-input" required></textarea>
                  </div>
                  <div class="form-field">
                    <label for="date" class="form-label">Date:</label>
                    <input type="text" id="date" name="date" class="form-input" required>
                  </div>
                  <div class="form-field">
                    <label for="time" class="form-label">Time:</label>
                    <input type="texts" id="time" name="time" class="form-input" required>
                  </div>
                  <div class="form-field">
                    <label for="place" class="form-label">Place:</label>
                    <input type="text" id="place" name="place" class="form-input" >
                  </div>
                 
                  <div class="form-field">
                    <label for="ticket1Price" class="form-label">Ticket 1 Price:</label>
                    <input type="number" id="ticket1Price" name="ticket1Price" class="form-input" required>
                  </div>
                  <div class="form-field">
                    <label for="ticket1Seats" class="form-label">Ticket 1 Seats:</label>
                    <input type="number" id="ticket1Seats" name="ticket1Seats" class="form-input" required>
                  </div>
                  <div class="form-field">
                    <label for="ticket2Price" class="form-label">Ticket 2 Price:</label>
                    <input type="number" id="ticket2Price" name="ticket2Price" class="form-input" required>
                  </div>
                  <div class="form-field">
                    <label for="ticket2Seats" class="form-label">Ticket 2 Seats:</label>
                    <input type="number" id="ticket2Seats" name="ticket2Seats" class="form-input" required >
                  </div>
                  <div class="form-field">
                    <label for="ticket3Price" class="form-label">Ticket 3 Price:</label>
                    <input type="number" id="ticket3Price" name="ticket3Price" class="form-input" required>
                  </div>
                  <div class="form-field">
                    <label for="ticket3Seats" class="form-label">Ticket 3 Seats:</label>
                    <input type="number" id="ticket3Seats" name="ticket3Seats" class="form-input" required>
                  </div>
                  
                  <div class="form-field">
                    <button type="submit" class="form-submit">Create</button>
                    <br><br>
                  </div>
                </form>
              </div>
            
        
           
                
