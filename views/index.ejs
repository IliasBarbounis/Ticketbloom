<html lang="en" >
    <head>
        <link rel="stylesheet" type="text/css" href="/css/index_page_styles.css">
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
        <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,700">

    <script src="https://cdnjs.cloudflare.com/ajax/libs/angular.js/1.4.7/angular.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/angular.js/1.4.7/angular-route.min.js"></script>
    <title>Home</title>
    </head> 
    <body style="background-color:#122f69;" ng-app="myApp">
            <div class="container">
                <div class="navbar">
                  <a href="/" class="logo">Ticketbloom</a>

                  
                  <nav>
                    
                    <ul id="menuList" >
                        <div id="parent">
                            <div id="center">
                                <li><a href="/artistic_events" class="cb">Artistic Events</a></li>
                            </div>
                            <div id="right">
                                <li><a href="/login" class="rb">Sign In</a> </li>
                                <li><a href="/register" class="rb" >Register</a></li>
                                <li><a href="/my_profile" class="rb">My Profile</a></li>
                                <li><a href="/about" class="rb">About</a></li>
                            </div>   
                        </div>         
                    </ul>
                    
                    
                  </nav>
                  
                  

                  <img src="/general_images/menu.png" class="menu-icon" 
                  onclick="togglemenu()">
                </div>
                
              
                <div class="row">
                    
                    <div class="col-1">
                        <% if (typeof message !== 'undefined' && message === 'success' ) { %>
                            <div style="color: green; font-size: 18px; font-weight: bold;">User Registered Successfully!</div>
                          <% } %>
                          
                          <% if (typeof message !== 'undefined' && message === 'reject') { %>
                            <div style="color: rgb(194, 0, 0); font-size: 18px; font-weight: bold;">You Have to Sign in to Access This Page!</div>
                          <% } %>
                        <h2>The Evolution of Ticket Booking is Here.</h2>
                        <h3>You can order your tickets easier than ever with Ticketbloom.</h3>
                        
                        
                    </div>
                    <div class="col-2">
                        <img src="../general_images/home_image.png" class="home_image" >
                    </div>
                </div>
                
                    

              </div>    
    </div>


   

    <script>
        var menuList = document.getElementById("menuList");

        menuList.style.maxHeight = "0px";   

        function togglemenu(){
            if(menuList.style.maxHeight == "0px"){
                menuList.style.maxHeight = "200px";
            }
            else{
                menuList.style.maxHeight = "0px";
            }
        }
    </script>
        
        <footer>
            <a href="https://www.ds.unipi.gr/en/home-en/" class="address">2023 Â© Department of Digital Systems</a>
        </footer>
    </body>
</html>